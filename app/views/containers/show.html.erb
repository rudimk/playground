<%- model_class = Container -%>
<div class="page-header">
  <h1><%=t '.title', :default => Container %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:container_id) %></dt>
      <dd><pre class="prettyprint"><%= @container.container_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @container.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:subdomain) %></dt>
      <dd><pre class="prettyprint"><%= @container.subdomain %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:port) %></dt>
      <dd><pre class="prettyprint"><%= @container.port %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              containers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_container_path(@container), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              container_path(@container),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

